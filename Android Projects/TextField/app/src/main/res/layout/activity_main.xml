<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Gender" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textYourGender"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:id="@+id/radioFemale"
        android:checked="true"
        android:layout_below="@+id/textYourGender"
        android:layout_centerHorizontal="true"
        android:onClick="onClickEvent" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:id="@+id/radioMale"
        android:checked="false"
        android:layout_below="@+id/radioFemale"
        android:layout_centerHorizontal="true"
        android:onClick="onClickEvent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do Stuff"
        android:id="@+id/buttonStuff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickEvent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="Name Here"
        android:layout_below="@+id/radioMale"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/buttonSave"
        android:layout_alignBottom="@+id/buttonStuff"
        android:layout_toEndOf="@+id/buttonStuff"
        android:onClick="WriteToFile" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open"
        android:id="@+id/buttonOpen"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textYourGender"
        android:onClick="ReadFromFile" />

</RelativeLayout>
